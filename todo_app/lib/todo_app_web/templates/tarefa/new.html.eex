<%= form_for @changeset, Routes.tarefa_path(@conn, :create), fn f -> %>
    <div class="form group">
        <%= text_input f, :titulo, placeholder: "titulo", class: "form control" %>
        <%= select f, :pronta, ["sim", "não"], class: "form control", style: "display: block", 
            prompt: "A tarefa está pronta?" %>
    </div>
    <%= submit "Criar tarefa", class: "btn btn-primary"%>
<% end %>